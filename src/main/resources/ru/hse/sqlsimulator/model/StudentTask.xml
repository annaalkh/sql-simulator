<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.hse.sqlsimulator.model">
  <class name="StudentTask" table="tasks">
    <id column="id" name="id" type="int">
      <generator class="increment"/>
    </id>
    <property column="name" name="name"/>
    <property column="description" name="description"/>
    <property column="task_text" name="taskText"/>
    <property column="is_active" name="active"/>
    <property column="is_planned" name="planned"/>
    <property column="start_date" name="startDate" type="date" />
    <property column="end_date" name="endDate" type="date"/>
    <property column="act_date" name="actDate" type="date"/>
  </class>
</hibernate-mapping>
